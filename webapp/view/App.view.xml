<mvc:View controllerName="UI5_course.UI5_course.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" displayBlock="true" xmlns="sap.m">
	<App id="app">
		<pages>
			<!--Task 1 Page-->
			<Page id="task1page" title = "{i18n>task1Title}">
				<content>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="btnTask1Next" class = "nav_to" icon="sap-icon://navigation-right-arrow" text="{i18n>btnNextTask}" type="Emphasized" press="onNavigate"/>
						<ToolbarSpacer/>
					</Toolbar>
					<form:SimpleForm editable="true" layout="ResponsiveGridLayout" id="form0">
						<form:content>
							<Label text="{i18n>lbName}" id="lblName"/>
							<Input width="50%" id="inName" value="{/Name}" placeholder="{i18n>phName}"/>
							<Label text="{i18n>lbAge}" id="lblAge"/>
							<Input width="50%" id="inAge" value="{/Age}" placeholder="{i18n>phAge}" type="Number"/>
							<Label text="{i18n>lbGender}" id="lblGender"/>
							<ComboBox width="50%" id="inGender" placeholder="{i18n>phGender}" value="{/Gender}">
								<items>
									<core:Item key="item-1-key" text="{i18n>male}" id="item0"/>
									<core:Item key="item-2-key" text="{i18n>female}" id="item1"/>
								</items>
							</ComboBox>
							<Label text="{i18n>lbPosition}" id="lblPosition"/>
							<Input width="50%" id="inPosition" value="{/Position}" placeholder="{i18n>phPosition}"/>
						</form:content>
					</form:SimpleForm>
					<Toolbar width="100%" id="toolbar1">
						<content>
							<Button text="{i18n>btnSend}" id="button1" icon="sap-icon://accept" press="onFormSend"/>
						</content>
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>