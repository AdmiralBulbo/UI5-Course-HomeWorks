<mvc:View controllerName="UI5_course.UI5_course.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" displayBlock="true" xmlns="sap.m">
	<App id="app">
		<pages>
			<Page id="task1page" title="{i18n>mainTitle}">
				<content>
					<Panel>
					<Title text="{i18n>helloWord}" wrapping="true"/>
					</Panel>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="btnToTask1" class="nav_to" icon="sap-icon://navigation-right-arrow" text="{i18n>task1Title}" type="Emphasized"
							press="onNavigate"/>
						<Button id="btnToTask2" class="nav_to" icon="sap-icon://navigation-right-arrow" text="{i18n>task2Title}" type="Emphasized"
							press="onNavigate"/>
						<Button id="btnToTask3" class="nav_to" icon="sap-icon://navigation-right-arrow" text="{i18n>task3Title}" type="Emphasized"
							press="onNavigate"/>
						<Button id="btnToTask4" class="nav_to" icon="sap-icon://navigation-right-arrow" text="{i18n>task4Title}" type="Emphasized"
							press="onNavigate"/>
						<ToolbarSpacer/>
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>